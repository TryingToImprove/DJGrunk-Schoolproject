@model Grunk.Web.UI.Models.CreateReviewsViewModel
@{
    ViewBag.Title = "Create";
}
<div class="create-review">
    <h1>
        Skriv en anmeldelse</h1>
    @using (Html.BeginForm("Create", "Reviews", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div class="control-group">
            <label>
                Titel:</label>
            <div class="controls">
                @Html.TextBoxFor(model => model.Title)
                @Html.ValidationMessageFor(model => model.Title)
            </div>
        </div>
        <div class="control-group">
            <label>
                Url:</label>
            <div class="controls">
                @Html.TextBoxFor(model => model.Url)
                @Html.ValidationMessageFor(model => model.Url)
            </div>
        </div>
        <div class="control-group">
            <label>
                Billede:</label>
            <div class="controls">
                @Html.TextBoxFor(model => model.Picture, new { type = "file" })
                @Html.ValidationMessageFor(model => model.Picture)
            </div>
        </div>
        <div class="control-group">
            <label>
                Indhold:</label>
            <div class="controls">
                @Html.TextAreaFor(model => model.Description, new { rows = 10 })
                @Html.ValidationMessageFor(model => model.Description)
            </div>
        </div>
        <div class="control-group no-label">
            <div class="controls">
                <input type="submit" value="Skriv anmeldelse" class="btn btn-largeTxt" />
                <input type="reset" value="Fortryd" class="btn btn-largeTxt" />
            </div>
        </div>
    }</div>
