@model IndexGenresViewModel
@{
    ViewBag.Title = "Index";
}
<div class="page-header">
    <h1>
        Oversigt over genres</h1>
</div>
<div class="row-fluid">
    <div class="span7">
        @Html.Partial("_Messages")
        <table class="table">
            <tr>
                <th>
                    Navn
                </th>
                <th>
                </th>
            </tr>
            @foreach (var item in Model.Genres)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td width="120">
                        @Html.ActionLink("Ret", "Index", new { id = item.GenreId }, new { @class = "btn" })
                        @Html.ActionLink("Slet", "Delete", new { id = item.GenreId }, new { @class = "btn" })
                    </td>
                </tr>
            }
        </table>
    </div>
    <div class="span5">
        @if (Model.GenreId.HasValue)
        {
            @Html.Action("CreateOrUpdate", "Genres", new { id = Model.GenreId.Value })
        }
        else
        {
            @Html.Action("CreateOrUpdate", "Genres")
        }
    </div>
</div>
