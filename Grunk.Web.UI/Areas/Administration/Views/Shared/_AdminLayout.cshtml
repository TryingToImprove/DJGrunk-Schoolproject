<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <script src="http://code.jquery.com/jquery.min.js"></script>
    <script src="@Url.Content("~/Content/Admin/js/bootstrap.js")"></script>
    <link href="@Url.Content("~/Content/Admin/css/bootstrap.css")" rel="stylesheet" type="text/css" />
    <style type="text/css">
        body
        {
            padding-top: 60px;
            padding-bottom: 40px;
        }
        .sidebar-nav
        {
            padding: 9px 0;
        }
    </style>
    <!-- Le HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container-fluid">
                <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse"><span
                    class="icon-bar"></span><span class="icon-bar"></span><span class="icon-bar"></span>
                </a><a class="brand" href="#">DJ Grunk</a>
                <div class="nav-collapse collapse">
                    <p class="navbar-text pull-right">
                        @{ Html.RenderAction("LoginDetails", "Home"); }
                    </p>
                    <ul class="nav">
                        <li><a href="@Url.Action("Index", "Home")"><i class="icon-white icon-home"></i>Dashboard</a></li>
                        <li><a href="@Url.Action("Index", "Home", new { area = "" })" target="_blank"><i
                            class="icon-white icon-globe"></i>Vis siden</a></li>
                    </ul>
                </div>
                <!--/.nav-collapse -->
            </div>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row-fluid">
            <div class="span3">
                <div class="well sidebar-nav">
                    <ul class="nav nav-list">
                        <li class="nav-header">Brugere</li>
                        <li><a href="@Url.Action("Index", "Profiles")">Oversigt</a></li>
                        <li class="nav-header">Anmeldelser</li>
                        <li><a href="@Url.Action("Index", "Reviews")">Oversigt</a></li>
                        <li><a href="@Url.Action("Waiting", "Reviews")">Venter på godkendelse</a></li>
                        <li><a href="@Url.Action("Rejected", "Reviews")">Afviste anmeldelser</a></li>
                        <li class="nav-header">Shop</li>
                        <li><a href="@Url.Action("Index", "Shop")">Oversigt</a></li>
                        <li><a href="@Url.Action("Create", "Shop")">Tilføj album</a></li>
                        <li><a href="@Url.Action("Index", "Genres", new { id = "" })">Genre oversigt</a></li>
                        <li class="nav-header">Andet</li>
                        <li><a href="@Url.Action("Index", "StoreDetails")">Informationer</a></li>
                        <li><a href="@Url.Action("Update", "Text", new { position = "frontpage" })">Forside
                            tekst</a></li>
                        <li><a href="@Url.Action("Update", "Text", new { position = "contact" })">Kontakt tekst</a></li>
                    </ul>
                </div>
                <!--/.well -->
            </div>
            <!--/span-->
            <div class="span9">
                @RenderBody()
            </div>
            <!--/span-->
        </div>
        <!--/row-->
    </div>
    <!--/.fluid-container-->
    @RenderSection("CustomJavascript", false)
</body>
</html>
