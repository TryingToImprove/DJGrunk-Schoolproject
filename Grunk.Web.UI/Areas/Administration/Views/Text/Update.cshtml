@model Grunk.Web.UI.Areas.Administration.Models.UpdateStaticText
@{
    ViewBag.Title = "Update";
}
<div class="page-header">
    <h1>
        Rediger indhold</h1>
</div>
@Html.Partial("_Messages")
@using (Html.BeginForm("Update", "Text", new { position = Model.Position }, FormMethod.Post, new { @class = "form-horizontal" }))
{
    <div class="control-group">
        <label class="control-label">
            Overskrift
        </label>
        <div class="controls">
            @Html.EditorFor(model => model.Header)
            @Html.ValidationMessageFor(model => model.Header)
        </div>
    </div>
    <div class="control-group">
        <label class="control-label">
            Indhold
        </label>
        <div class="controls">
            @Html.TextAreaFor(model => model.Text, new { rows = "10", @class = "input-xxlarge" })
            @Html.ValidationMessageFor(model => model.Text)
        </div>
    </div>

    <div class="form-actions">
        <input type="submit" class="btn btn-primary" value="Gem" />
    </div>
}
